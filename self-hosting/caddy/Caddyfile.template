$DOMAIN_NAME {$SSL_CONFIG
    encode gzip
    
    handle_path /api* {
        reverse_proxy ags-api:3000
    }

    reverse_proxy /* ags-dashboard:3000
}

worker.$DOMAIN_NAME {$SSL_CONFIG
    encode gzip

    basic_auth {
        admin $BASIC_AUTH_PASSWORD
    }

    reverse_proxy ags-worker:3000
}